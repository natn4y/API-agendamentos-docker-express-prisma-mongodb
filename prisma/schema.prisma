// schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model User {
  id         String @id @default(uuid()) @map("_id")
  email      String @unique
  name       String
  created_at String
  isAdmin    Boolean
}
